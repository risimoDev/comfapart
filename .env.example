# Environment
NODE_ENV=development

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/comfort_apartments?schema=public"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Comfort Apartments"

# Stripe (структура без ключей)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# CloudPayments (структура без ключей)  
CLOUDPAYMENTS_PUBLIC_ID=""
CLOUDPAYMENTS_API_SECRET=""

# Email (структура)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM=""

# Telegram Bot (получить токен через @BotFather)
TELEGRAM_BOT_TOKEN=""
TELEGRAM_BOT_USERNAME="ComfortApartmentsBot"
APP_URL="http://localhost:3000"

# File uploads
UPLOAD_MAX_SIZE=10485760
UPLOAD_DIR="./public/uploads"

# Localization
DEFAULT_LOCALE="ru"
SUPPORTED_LOCALES="ru,en"

# Currency
DEFAULT_CURRENCY="RUB"
SUPPORTED_CURRENCIES="RUB,USD,EUR"
