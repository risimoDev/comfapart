# =============================================================================
# Comfort Apartments - Production Environment Variables
# =============================================================================
# 
# Скопируйте этот файл как .env и заполните значения:
#   cp .env.production.example .env
#   nano .env
#
# =============================================================================

# -----------------------------------------------------------------------------
# Domain & URLs
# -----------------------------------------------------------------------------
DOMAIN=apartments.example.com
APP_URL=https://apartments.example.com
APP_NAME=Comfort Apartments

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_USER=comfort
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=comfort_apartments

# Для справки (формируется автоматически в docker-compose):
# DATABASE_URL=postgresql://comfort:password@postgres:5432/comfort_apartments

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# Секретный ключ для JWT токенов (минимум 32 символа)
# Генерация: openssl rand -base64 64
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long

# Время жизни токена
JWT_EXPIRES_IN=7d

# -----------------------------------------------------------------------------
# Telegram Bot
# -----------------------------------------------------------------------------
# Получите токен через @BotFather в Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrSTUvwxYZ

# Имя бота (без @)
TELEGRAM_BOT_USERNAME=YourBotName

# -----------------------------------------------------------------------------
# Email (SMTP)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASS=your_smtp_password
EMAIL_FROM=Comfort Apartments <noreply@example.com>

# -----------------------------------------------------------------------------
# Payment Systems (optional)
# -----------------------------------------------------------------------------
# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# CloudPayments
CLOUDPAYMENTS_PUBLIC_ID=
CLOUDPAYMENTS_API_SECRET=

# -----------------------------------------------------------------------------
# File Storage (optional)
# -----------------------------------------------------------------------------
# S3-compatible storage
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=
S3_REGION=

# -----------------------------------------------------------------------------
# Monitoring (optional)
# -----------------------------------------------------------------------------
# Sentry
SENTRY_DSN=

# Analytics
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_YM_ID=

# -----------------------------------------------------------------------------
# Other
# -----------------------------------------------------------------------------
NODE_ENV=production
TZ=Europe/Moscow
